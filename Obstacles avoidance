ps[2] = robot->getDistanceSensor("ps2"); 
ps[3] = robot->getDistanceSensor("ps5"); 
ps[4] = robot->getDistanceSensor("ps6"); 
ps[5] = robot->getDistanceSensor("ps7"); 
